{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0",
  "description": "__MSG_extDescription__",
  "homepage_url": "https://turboelk.com/opsgenie",
  "default_locale": "en",
  "icons": {
    "16": "/images/16x16.png",
    "32": "/images/32x32.png",
    "48": "/images/48x48.png",
    "128": "/images/128x128.png"
  },
  "permissions": [
	"storage"
  ],
  "host_permissions": [
	"https://*.opsgenie.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'none'; script-src 'self'; style-src 'self'; connect-src https://api.opsgenie.com https://api.eu.opsgenie.com;"
  },
  "options_ui": {
    "open_in_tab": false,
    "page": "options.html"
  },
  "background": {
    "scripts": [
        "js/background.js"
    ],
    "type": "module"
  },
  "sidebar_action": {
    "default_title": "__MSG_extName__",
    "default_panel": "sidebar.html",
    "default_icon": {
      "16": "/images/16x16.png",
      "32": "/images/32x32.png",
      "48": "/images/48x48.png",
      "128": "/images/128x128.png"
    }
  },
  "developer": {
    "name": "Marcus Hansson",
    "url": "https://turboelk.com/"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "opsgenie-sidebar@turboelk.com"
    }
  }
}
